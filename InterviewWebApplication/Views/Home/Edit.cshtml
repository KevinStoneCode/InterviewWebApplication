@model InterviewWebApplication.ViewModels.UserFormViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>編輯</h2>


@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    <div>
        <div>
            <div>@Html.LabelFor(m => m.User.Name)  </div>
            <div>
                <div class="form-group">
                    @Html.EditorFor(m => m.User.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.User.Name, "")
                </div>
            </div>
        </div>
        <div>
            <div>@Html.LabelFor(m => m.User.Email)  </div>
            <div>
                <div class="form-group">
                    @Html.EditorFor(m => m.User.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.User.Email, "")
                </div>
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.User.Id)
    @Html.AntiForgeryToken()
    <div class="btn-area">
        @Html.ActionLink("取消", "Index")
        <input type="submit" value="送出" />
    </div>
}
